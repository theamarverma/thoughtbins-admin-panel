{
  "compilerOptions": {
    "target": "ES2020",                           
    "module": "CommonJS",                        
    "strict": true,                              
    "esModuleInterop": true,                    
    "skipLibCheck": true,                        
    "forceConsistentCasingInFileNames": true,   
    "outDir": "./dist",                          
    "resolveJsonModule": true,                   
    "noImplicitAny": false                      
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
